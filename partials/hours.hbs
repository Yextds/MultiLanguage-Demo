<div class="hours-list text-sm max-w-[360px]">  
  {{#with (formatHours this "Monday" "TimeFormatShort" "DateFormatShort") }}
      {{#each this.regularHours}}
      <div class="{{this.displayDay}} grid grid-cols-2 lg:grid-cols-5 time-row leading-8">
        <div class="lg:col-span-2">
          <strong class="font-normal">{{this.displayDay}}</strong>
        </div>
        <div class="lg:col-span-3">
          {{#if this.isClosed}}Closed{{/if}}
          {{#if this.is247}}Open 24/7{{/if}}
          {{#each this.openIntervals}}
            {{this.start}}-{{this.end}}
          {{/each}}
        </div>
      </div>
      {{/each}}
  {{/with}}
</div>
